{
  "manifest_version": 3,
  "name": "SpawnTrap - General",
  "version": "4.0",
  "description": "Configurable VTOP monitor with SMS and Multi-Target support.",
  "permissions": [
    "activeTab",
    "scripting",
    "notifications",
    "storage"
  ],
  "host_permissions": [
    "*://vtopregcc.vit.ac.in/*",
    "https://api.twilio.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://vtopregcc.vit.ac.in/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}